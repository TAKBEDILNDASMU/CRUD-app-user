<%- include('layout/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-12">
      <% if (message) { %>
      <div class="alert alert-dismissible fade show alert-<%= message.type%>">
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <a href="/add" class="btn btn-success mb-3 sm:d-none addBtn">Add User</a>
      <div class="table-responsive">
        <% if (users != '') { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>E-Mail</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="align-middle">
            <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><img src="<%= user.image %>" width="50" class="img-thumbnail" /></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td class="">
                <a href="/edit/<%= user.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                <form action="/<%= user._id %>?_method=DELETE" class="d-inline" method="post">
                  <button type="submit" class="text-danger btn"><i class="fas fa-trash fa-lg mx-1"></i></button>
                </form>
              </td>
            </tr>
            <%}) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
        <%} %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
