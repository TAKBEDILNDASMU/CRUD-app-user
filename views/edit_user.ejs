<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit User</h3>
        </div>
        <div class="card-body p-4">
          <form action="/edit/<%= user._id %>?_method=PUT" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name">Name</label>
              <input type="text" name="name" class="form-control form-control-lg" value="<%= user.name %>" placeholder="Enter name" required />
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input type="email" name="email" class="form-control form-control-lg" value="<%= user.email %>" placeholder="Enter email" required />
            </div>
            <div class="mb-3">
              <label for="phone">Phone</label>
              <input type="tel" name="phone" class="form-control form-control-lg" value="<%= user.phone %>" placeholder="Enter phone" required />
            </div>
            <div class="mb-3">
              <label for="image">Select Image</label>
              <input type="file" name="image" class="form-control form-control-lg" />
              <img src="<%= user.image %>" class="mb-1 img-thumbnail" width="100" />
            </div>
            <input type="hidden" name="oldImage" value="<%= user.image %>" />
            <div class="mb-3 d-grid">
              <input type="submit" value="Edit User" class="btn btn-success btn-lg" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
